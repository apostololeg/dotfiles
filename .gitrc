# misspell's
alias qgit="git"

# status
alias gb="git b"
alias st="git st"
alias df="git diff"
alias pl="git pull"
alias sh="git show"
alias shn="git show --name-only"
alias gh="git hist"
alias gl1="gl 1"
alias gcl="git clean -d -f"
# edits
alias gad="git add ."
alias gco="git co"
alias chp="git cherry-pick"
alias gpop="git reset HEAD^"
# commit
alias gc="git ci -m"
alias camend="git commit -a --amend"
# rebase
alias grm="git rebase base/master"
alias grc="git rebase --continue"
alias grs="git rebase --skip"
alias gra="git rebase --abort"
# ребейзим последний N коммитов
gr() {
    git rebase -i HEAD~$1
}
# configs
alias gconf="vi .git/config"
alias remote="git remote -v"
# push
alias pushforce="ph --force"
alias pushf="pushforce"
alias pf="pushforce"
alias pt="ph --tags"

# git log
gl() {
    local params;
    [ -z $1 ] && params="" || params="-"$1;

    git log $params;
}

# git push
ph() {
    local remote;
    [ -z $1 ] && remote=origin || remote=$1;

    git push $remote;
}

# change origin of git repo
chor() {
    git remote rm origin
    git remote add origin $1
}

# ребейзим все коммиты текущей ветки по базовой ветке (dev)
# [Git Branch Rebase]
gbr() {
    local base;
    local current;

    [ -z $1 ] && base=$1 || base=dev;
    [ -z $2 ] && current=$2 || current=HEAD;

    git rebase -i `git merge-base $base $current`
}

# конфиг по умолчанию для новой ветки
# @param1 – base branch / [master] | dev | v1 | ...
# @param2 - remote
# [Git Branch Config]
gbc() {
    GIT_current_branch=`git rev-parse --abbrev-ref HEAD`;

    GIT_base_branch=master;
    [ -z $1 ] || GIT_base_branch=$1;

    GIT_remote=origin;
    [ -z $2 ] || GIT_remote=$2;

    # rebase = true
    git config branch.$GIT_current_branch.rebase true
    # remote = origin
    git config branch.$GIT_current_branch.remote $GIT_remote
    # merge = refs/heads/master
    git config branch.$GIT_current_branch.merge refs/heads/$GIT_base_branch
}

# обновляем ветку
gbup() {
    local branch=`git rev-parse --abbrev-ref HEAD`

    gco master && \
        gb -D $branch && \
        rm -rf .git/refs/remotes/origin/$branch && \
        git fetch origin && \
        gco $branch
}

# тянем пуллреквест в ветку pr-<номер>
getpr() {
    TPR_branch=pr-$1;
    git fetch origin refs/pull/$1/head:$TPR_branch
    git co $TPR_branch;
}

# узнаём дату коммита
# [CommIt DATE]
cidate() {
    # указанный или последний коммит
    STATE=$1 || HEAD;
    git show $STATE | grep Date | awk -F':   ' '{print $2}'
}
